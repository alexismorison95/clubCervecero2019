<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pictureCardBack"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_height"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="15dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pictureCard"
            android:scaleType="centerCrop"
            android:background="@color/colorBlack"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="@dimen/paddingVerticalCard"
            android:paddingRight="@dimen/paddingVerticalCard"
            android:paddingBottom="10dp"
            android:paddingTop="12dp"
            android:background="@color/colorBackgroundTextCar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal">

                <TextView
                    android:id="@+id/cardViewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7 COLINAS"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="@dimen/textNameCardView"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/timeCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hace 7 hs"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="@dimen/textTimeCardView"
                    android:gravity="end"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/likeCheckCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox_like_selector"
                        android:layout_marginRight="10dp"/>

                    <ImageView
                        android:id="@+id/shareCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_share"
                        android:layout_marginRight="10dp"/>

                    <ImageView
                        android:id="@+id/placeCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_place"
                        android:layout_marginRight="10dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/likesCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 me gusta"
                    android:textSize="12sp"
                    android:textColor="@color/colorTextWhite"/>



            </LinearLayout>





        </LinearLayout>


    </FrameLayout>

</androidx.cardview.widget.CardView>